pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Change to the directory where your package.json is located
                    dir('C:\\Users\\apurvasingh01\\.jenkins\\workspace\\TestPipeline\\') {
                        // Install dependencies using npm
                        bat 'npm install'
                    }
                }
            }
        }
        stage('Test') {
            steps {
               script {
                    dir('C:\\Users\\apurvasingh01\\.jenkins\\workspace\\TestPipeline\\') {
                        // Run Cypress tests using npm
                        bat 'npx cypress open'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Success deploying...'
            }
        }
    }
}
