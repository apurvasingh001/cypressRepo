pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {                   
                        // Install dependencies using npm
                        sh 'npm install'
                    }
                }
            }
        
        stage('Test') {
            steps {
               script {
                        // Run Cypress tests using npm
                        sh 'npx cypress open'
                    }
                }
            }
        
        stage('Deploy') {
            steps {
                echo 'Success deploying...'
            }
        }
    }
}
